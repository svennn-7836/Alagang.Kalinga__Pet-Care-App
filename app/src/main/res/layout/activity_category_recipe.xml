<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpurtple">

    <ImageView
        android:id="@+id/selectcategoryImage"
        android:layout_width="411dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:contentDescription="category"
        android:src="@drawable/select_category_for_food_recipes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="5"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/CatsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="356dp"
        android:clickable="true"
        android:contentDescription="Cats"
        android:onClick="onCatsClick"
        android:src="@drawable/cats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="5"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dogsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:clickable="true"
        android:contentDescription="Dogs"
        android:onClick="ondogsClick"
        android:src="@drawable/dogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="5"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>