<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightyellow">


        <ImageView
            android:id="@+id/dogfood2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dogfoodpic2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:layout_width="350dp"
            android:layout_height="1400dp"
            android:background="@drawable/dogfoodbg1"
            app:layout_constraintTop_toTopOf="@id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="136dp"/>
        <View
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:background="@drawable/titlefoodbg"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="@+id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="153dp"
            android:text="Peanut Butter and Pumpkin"
            android:textColor="@color/black"
            android:textSize="26dp"/>

        <View
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:background="@drawable/titlefoodbg"
            android:layout_marginTop="210dp"
            app:layout_constraintTop_toTopOf="@+id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="210dp"
            android:text="Ingredients"
            android:textColor="@color/black"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="253dp"
            android:text=" · 2 ½    cups whole wheat flour
\n · 2 large eggs
\n· ½    cup canned pumpkin
\n· 2 tablespoons peanut butter
\n· ½    teaspoon salt
\n· ½    teaspoon ground cinnamon
\n· 1 teaspoon water, \n or more if necessary (Optional)"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <View
            android:layout_width="325dp"
            android:layout_height="660dp"
            android:background="@drawable/titlefoodbg"
            android:layout_marginTop="470dp"
            app:layout_constraintTop_toTopOf="@+id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:text="Directions"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dogfood2" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="650dp"
            android:layout_marginTop="520dp"
            android:text="Procedure
\n \n  1. Preheat the oven to 350 degrees F (175 degrees C).
\n \n  2. Combine flour, eggs, pumpkin, peanut butter, salt, and cinnamon in a bowl; stir with a spatula until combined.
\n \n  3. Transfer mixture to a work surface and work it with your hands until mixture starts to come together. Add 1 teaspoon water at a time (only if needed) to help make the dough workable, but don't add too much as it should be dry and stiff.
\n \n  4. Roll the dough to a thickness of 1/2 inch.
\n \n  5. Cut into 1/2-inch pieces and transfer to a baking sheet.
\n \n  6. Bake in the preheated oven until dog treats are golden brown and crunchy, about 40 minutes. Let cool before serving to your dog."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dogfood2" />

        <View
            android:layout_width="325dp"
            android:layout_height="370dp"
            android:background="@color/lightyellow"
            android:layout_marginTop="1150dp"
            app:layout_constraintTop_toTopOf="@+id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:background="@drawable/dognutrition2"
            android:layout_marginTop="1170dp"
            app:layout_constraintTop_toTopOf="@+id/dogfood2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/BackRed2"
            android:layout_width="88dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:contentDescription="BackRed2"
            android:onClick="onBackRed2Click"
            android:src="@drawable/backred"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="5"
            tools:ignore="ContentDescription" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
